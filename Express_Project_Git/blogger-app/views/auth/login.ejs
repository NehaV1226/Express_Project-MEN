<div class="container mt-4">
  <h2>Login</h2>
  <form action="/auth/login" method="POST">
    <input
      class="form-control my-2"
      type="email"
      name="email"
      placeholder="Email"
      required
    />
    <input
      class="form-control my-2"
      type="password"
      name="password"
      placeholder="Password"
      required
    />
    <button class="btn btn-lavender mt-2">Login</button>
  </form>
</div>
