<div class="container mt-4">
  <h2>Sign Up</h2>
  <form action="/auth/signup" method="POST">
    <input
      class="form-control my-2"
      type="text"
      name="name"
      placeholder="Name"
      required
    />
    <input
      class="form-control my-2"
      type="email"
      name="email"
      placeholder="Email"
      required
    />
    <input
      class="form-control my-2"
      type="text"
      name="contact"
      placeholder="Contact"
      required
    />
    <input
      class="form-control my-2"
      type="password"
      name="password"
      placeholder="Password"
      required
    />
    <button class="btn btn-lavender mt-2">Sign Up</button>
  </form>
</div>
